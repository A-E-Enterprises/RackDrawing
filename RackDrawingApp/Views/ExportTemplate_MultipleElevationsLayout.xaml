<UserControl x:Class="RackDrawingApp.Views.ExportTemplate_MultipleElevationsLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RackDrawingApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ItemsControl
        HorizontalAlignment="Center"
		VerticalAlignment="Center"
        ItemsSource="{Binding ImageSources, Mode=OneWay}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                    <Image Source="{Binding}" Width="Auto" />
                </Viewbox>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>
